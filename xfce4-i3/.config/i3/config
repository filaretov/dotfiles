# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
	status_command ~/.local/bin/i3bar.py
	position top
	font pango: Fira Mono Medium 11
	separator_symbol " "
	colors {
		background #2E3440
		statusline #D8DEE9
		focused_workspace  #2E3440 #ECEFF4 #2E3440
		inactive_workspace #2E3440 #2E3440 #ECEFF4
		urgent_workspace   #2E3440 #BF616A #2E3440
	}
	tray_output primary
	strip_workspace_numbers yes
}

