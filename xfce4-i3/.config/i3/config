set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7: 1 "
set $ws8 "8: 2 "
set $ws9 "9: 3 "
set $ws0 "10:  "

# Assign programs to ws
