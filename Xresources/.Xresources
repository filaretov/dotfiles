#include ".Xresources.d/solarized-dark.conf"
!#include ".Xresources.d/solarized-light.conf"

! Rofi
rofi.modi:                           window,run,ssh,drun
rofi.lines:                          4
rofi.columns:                        1
rofi.font:                           Fira Mono 10
rofi.color-normal:                   #fdf6e3,#002b36,#fdf6e3,#268bd2,#002b36
rofi.color-window:                   #fdf6e3,#002b36
rofi.bw:                             2
rofi.eh:                             1
rofi.separator-style:                solid
rofi.hide-scrollbar:                 true
rofi.run-command:                    fish -c '{cmd}'
rofi.run-list-command:               'fish -c functions'
