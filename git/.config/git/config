[user]
	name = Hristo Filaretov
	email = h.filaretov@campus.tu-berlin.de

[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	st = status --short
	co = checkout
	cb = checkout -b
	c = commit
	p = pull
	pp = push
	cm = commit -m
	cam = commit -am
	can = commit --amend --no-edit
	aa = add --all
	rc = rebase --continue
	ls = ls-files
	ciao = checkout -- .
	purr = pull --rebase

[diff "odf"]
	binary = true
	textconv = odt2txt

[diff "pdf"]
	binary = true
	textconv =

[push]
	default = simple

[color]
	ui = auto

[column]
	ui = auto

[diff]
	algorithm = histogram

[commit]
	verbose = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
