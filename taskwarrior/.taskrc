# Files
data.location=~/.task
weekstart=Monday

include /usr/share/taskwarrior/dark-16.theme

uda.xp.type=numeric
uda.xp.label=XP
uda.xp.default=0

uda.skill.type=string
uda.skill.label=Skill

uda.special.type=string

report.skills.columns=id,due,description,skill,xp
report.skills.filter=status:pending
report.skills.sort=due+,xp-

